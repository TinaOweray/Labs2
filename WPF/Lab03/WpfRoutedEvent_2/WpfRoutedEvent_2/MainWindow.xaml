<Window x:Class="WpfRoutedEvent_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox   x:Name="txtBox"
            HorizontalAlignment="Left" 
                   Margin="58,57,0,0" 
                   TextWrapping="Wrap" 
                   Text="" 
                   VerticalAlignment="Top" 
                   Width="120"/>
        <StackPanel ButtonBase.Click="StackPanel_Click_1"
            HorizontalAlignment="Left" 
            Height="114" Margin="340,57,0,0" 
            VerticalAlignment="Top" 
            Width="354">
            <Button x:Name="butAdd" Content="x+x"/>
            <Button x:Name="butMult" Content="x*x"/>
            <Button x:Name="butSqrt" Content="SQRTx"/>
        </StackPanel>

    </Grid>
</Window>

<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="Заголовок" 
        Height="350" 
        Width="500" 
        MinHeight="330" 
        MinWidth="300" 
        Closing="Window_Closing_1" Icon="/user.png">
    
    <Grid>

        <Menu HorizontalAlignment="Left" 
              VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" 
                          Click="MenuItem_Click_1"/>
            </MenuItem>
        </Menu>
        <Label x:Name="lbl" HorizontalAlignment="Center"   
                    VerticalAlignment="Top" 
                    Content="Добрый день"/>
        <Button x:Name="setBut" 
                Content="Set Name" 
                HorizontalAlignment="Left" 
                Margin="66,64,0,0" 
                VerticalAlignment="Top" 
                Click="setBut_Click"/>
        <Button x:Name="retBut" 
                Content="Ret Name" 
                HorizontalAlignment="Left" 
                Margin="66,122,0,0" 
                VerticalAlignment="Top" 
                Click="retBut_Click"/>
        <TextBox x:Name="setText" 
                 HorizontalAlignment="Left" 
                 Margin="162,66,0,0" 
                 TextWrapping="Wrap" 
                 Text="" VerticalAlignment="Top" 
                 Width="120" TextChanged="setText_TextChanged"/>
        <Label x:Name="retLabel" 
               Content="" 
               HorizontalAlignment="Left" 
               Margin="162,116,0,0" 
               VerticalAlignment="Top" 
               Width="120"/>
        <Button x:Name="New_Win"
                Content="New window" 
                HorizontalAlignment="Left"
                Margin="66,178,0,0" 
                VerticalAlignment="Top" Click="New_Win_Click" 
                Width="80"/>
        <TextBlock x:Name="txtBlock" 
                   HorizontalAlignment="Left" 
                   Margin="162,182,0,0" 
                   TextWrapping="Wrap" 
                   Text="TextBlock" 
                   VerticalAlignment="Top" 
                   Height="50"
                   Width="75"/>
    </Grid>
    

</Window>

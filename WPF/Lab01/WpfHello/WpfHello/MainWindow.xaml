<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="Заголовок" Height="350" Width="500" MinHeight="350" MaxWidth="300" Closing="Window_Closing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click_1"/>
            </MenuItem>
        </Menu>
        <Label x:Name="lbl" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Добрый день" Margin="108,0,0,0"/>
        <Button x:Name="setBut" Content="Set Name" HorizontalAlignment="Left" Margin="13,72,0,0" VerticalAlignment="Top" Click="setBut_Click"/>
        <Button x:Name="retBut" Content="Ret Name" HorizontalAlignment="Left" Margin="13,133,0,0" VerticalAlignment="Top" Click="retBut_Click"/>
        <TextBox x:Name="setText" HorizontalAlignment="Left" Margin="86,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" RenderTransformOrigin="0.503,0.466" TextChanged="setText_TextChanged" Grid.ColumnSpan="2"/>
        <Label x:Name="retLabel" HorizontalAlignment="Left" Margin="86,130,0,0" VerticalAlignment="Top" Width="204" Height="37" Grid.ColumnSpan="2"/>
        <Button x:Name="New_Win" Content="New Window" HorizontalAlignment="Left" Margin="13,187,0,0" VerticalAlignment="Top" Click="New_Win_Click"/>
        <TextBlock x:Name="txtBlock" HorizontalAlignment="Left" Height="50" Margin="99,189,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2"/>
    </Grid>

</Window>
